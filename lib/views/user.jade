extends _layout

block content
    h2 #{today} #{tstr} - 订餐列表
    .container
        ul.nav.navbar-nav
            li
                a(href="./am") 上午
            li
                a(href="./pm") 下午
    .row
        each user, index in users
            p.col-md-3= index + 1
                | . #{sexs[user.sex]}
                img.img-rounded(width=32,src="#{user.headimgurl}")
                strong= user.nickname
    strong 订饭总人数：#{users.length}
    style.
        strong { padding: 5px; }
